{% extends 'base.html.twig' %}
{% form_theme form 'forms/semantic-ui-form-theme.html.twig' %}
{% block css %}

{% endblock %}
{% block body_id 'dashboard' %}

{% block header %}
    &nbsp;

    <div class="ui two column stackable grid">
        <div class="column">
            <h1 class="ui header">

                <img class="ui medium circular image" style="width: 50px"  src="{{ asset('public/albums/thumbnails/'~ app.user.formNo ~'.jpg') }}">

                <div class="content" style='font-size:16px'>

                    <small style='color:red'> please fields marks with (*) are required</small>


                </div>
            </h1>
        </div>
        {% if(app.user.formCompleted==1) %}
            <div class="middle aligned column">
                <a href="{{ path('preview') }}" class="ui right floated basic button">Click to
                    preview your form.</a>

            </div>
        {% endif %}
    </div>
{% endblock %}

{% block main %}

    <div class="step1">


        <div class="ui ignored positive message">

            <h4 class="text-center">
                1. BIODATA COLLECTION</h4>
        </div>
        <hr>
        <div class="ui form">
            {{ form_errors(form) }}
        {{ form_start(form ) }}



            <div class="equal width fields">
            <div class="required field">
                {{ form_row(form.firstName) }}
                 </div>
            <div class="field required ">
                {{ form_row(form.lastName) }}

            </div>
            <div class="field ">
                {{ form_row(form.otherNames) }}

            </div>

        </div>
        <div class="equal width fields">
            <div class="field required">
                {{ form_row(form.title) }}
              </div>

            <div class="field required">
                {{ form_row(form.gender) }}

            </div>
            <div class="field required">
                {{ form_row(form.maritalStatus) }}

            </div>

        </div>

        <div class="equal width fields">
            <div class="field required">
                {{ form_row(form.dob) }}
            </div>
            <div class="field required">
                {{ form_row(form.phone) }}
            </div>


        </div>
        <div class="equal width fields">
            <div class="field required">
                {{ form_row(form.entryQualificationOne) }}
            </div>
            <div class="field required">
                {{ form_row(form.entryQualificationTwo) }}
            </div>
            <div class="field required">
                {{ form_row(form.physicallyDisabled) }}
            </div>


        </div>
            <div class="equal width fields">

                <div class="field required">
                    {{ form_row(form.religion) }}
                </div>


            </div>
            <p>&nbsp;</p>
            <h4 class="text-center">
                2. LOCATION INFORMATION</h4>
            </div>
            <hr>

            <div class="equal width fields">
                <div class="field required">
                    {{ form_row(form.hometown) }}
                </div>
                <div class="field required">
                    {{ form_row(form.address) }}
                </div>
                <div class="field required">
                    {{ form_row(form.email) }}
                </div>


            </div>

            <div class="equal width fields">
                <div class="field required">
                    {{ form_row(form.bond) }}
                </div>
                {% if (app.user.formType=='FOREIGN') %}
                <div class="field required  ">
                    {{ form_row(form.nationality) }}
                </div>
                {% endif %}
                <div class="field required">
                    {{ form_row(form.region) }}
                </div>


            </div>

            <p>&nbsp;</p>
            <div class="ui ignored positive message">

                <h4 class="text-center">
                    3. GUARDIAN OR PARENT INFORMATION.</h4>
            </div>

            <hr>

            <div class="equal width fields">
                <div class="field required">
                    {{ form_row(form.guardianName) }}
                </div>
                <div class="field required">
                    {{ form_row(form.guardianAddress) }}
                </div>
                <div class="field required">
                    {{ form_row(form.guardianPhone) }}
                </div>


            </div>

            <div class="equal width fields">
                <div class="field required">
                    {{ form_row(form.guardianOccupation) }}
                </div>
                <div class="field required">
                    {{ form_row(form.guardianRelationship) }}
                </div>
                <div class="required field">
                    {{ form_row(form.financeSource) }}
                </div>


            </div>
        <span>&nbsp;</span>
            <center> {{ form_end(form) }}</center>



            <p >
           <center>

            <a class="btn text-grey-darker" href="{{ path('photoUpload') }}">Click to go back</a>
                {% if app.request.get('done')==1 or app.user.getFormNo !=0 %}
            <a class="btn btn primary" href="{{ path('step2') }}">Click to go to step2</a>
                {% endif %}

        </center>
        </p>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">

    $('#save').click(function(e){
        event.preventDefault();
        var formData = new FormData($(this)[0]);

        alert(formData);
            $.ajax({
                url: "{{ path('step1') }}",
                data	: formData,
                type: "POST",

                contentType: false,
                processData: false,
                cache: false,
                dataType: "JSON", // Change this according to your response from the server.
                error: function (err) {
                    console.error(err);
                },
                success: function (data) {
                    console.log(data);
                },
                complete: function () {
                    console.log("Request finished.");

                }
            }). done(function(data){

                if (data.status == 'success'){
                    $(".green").show();
                    $(".green").text(data.status + " " + data.message);
                    $(".green").fadeOut(4000);
                    //window.location.href="{{url('photoUpload')}}";
                }
                else{
                    $(".red").show();
                    $(".red").text(data.status + " " + data.message);
                    $(".red").fadeOut(4000);
                }


            });;
    });


</script>



{% endblock %}







